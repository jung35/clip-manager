{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": ["eslint:recommended", "plugin:prettier/recommended"],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "double",
            {
                "allowTemplateLiterals": true
            }
        ],
        "semi": [
            "error",
            "always"
        ],
        "max-len": [
            "error",
            {
                "code": 120
            }
        ],
        "no-console": "warn",
        "space-before-blocks": "error",
        "keyword-spacing": "error",
        "eol-last": "error",
        "no-trailing-spaces": "error",
        "newline-before-return": "error",
        "curly": "error",
        "comma-spacing": "error",
        "object-curly-spacing": [
            "error",
            "always"
        ],
        "key-spacing": "error",
        "arrow-parens": [
            "error",
            "always"
        ],
        "arrow-spacing": "error",
        "no-var": "error",
        "prefer-const": "error",
        "no-warning-comments": "warn",
        "no-fallthrough": "off"
    }
}
